<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h2>Biblioteca</h2>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Livro</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(books => { %>
                    <tr>
                        <td><%= books.title %></td>
                        <td><%- books.body %></td>
                        <td>
                          <a href="/books/reserv/<%= books.id %>" class="btn btn-primary">Reservar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
  </body>
  <%- include('../../partials/footer.ejs') %>