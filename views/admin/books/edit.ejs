<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %> 

<div class="container">
    <hr>
    <div class="card"> 
        <div class="card-header">
            <h2>Editar Livro</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/books/update">
                <input type="hidden" value="<%= books.id %>" name="id">
                <label>Titulo</label>
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do livro" value="<%= books.title %>"><br>
                <label>Resumo</label>
                <textarea name="body" id="article" class="form-control"><%- books.body %></textarea><br>
                <br>
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        activeEditor: true,
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ],
        init_instance_callback: () => {
            tinymce.get("article").setContent($("#content").html())
        }
    })

</script>